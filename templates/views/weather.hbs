<!doctype html>
<html lang="en">

<head>
    {{>head}}
</head>

<body>
    {{>header}}
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto ">
                <div class="main_content">
                    <form class="temp_form">
                        <input type="text" id="cityName" autocomplete="off" placeholder="Enter Your City Name">
                        <input type="submit" value="Search" id="submitBtn">
                    </form>
                </div>
                <div class="tempInfo">
                    <div class="top_layer">
                        <p id="day"></p>
                        <p id="today_date" class="month"></p>
                    </div>
                    <div class="main_layer">
                        <p id="city_name">Get Output Here</p>
                        <div class="middle_layer data_hide">
                            <p id="temp"><span id="temp_real_val"></span><sup>o</sup>C</p>
                            <p id="temp_status"></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>footer}}
    <script src="js/main.js"></script>
    <script>
        const day = document.getElementById('day');
        const getCurrentDay = () => {
            const days = ["Sunday", "Monday", "Tuesday", "Wednsday", "Thursday", "Fridat", "Saturday"];
            const curDay = new Date();
            let currDay = days[curDay.getDay()];
            day.innerHTML= currDay;
        };
        const today_date=document.getElementById('today_date');
         const getCurrentTime = () => {
            const months = ["Jan", "Feb", "Mar", "Apr", "May", "June", "July", "Aug", "Sept", "Oct", "Nov", "Dec"];
            let currentTime = new Date();
            let month = months[currentTime.getMonth()];
            let date = currentTime.getDate();
          today_date.innerHTML=`${date}  ${month}`;
        };
        getCurrentDay();
        getCurrentTime();
    </script>
</body>

</html>